<!-- Validation failure messages -->

<% if @material.errors.any? %>
  <% @material.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Material</h3>
      </div>
      <div class="panel-body">
        <form action="/create_material" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for material_id -->
          <div class="form-group">
            <label for="material_id" class="col-sm-2 control-label">
              Material
            </label>
            <div class="col-sm-10">
              <input type="text" id="material_id" name="material_id" placeholder="Material" class="form-control" value="<%= @material.material_id %>">
            </div>
          </div>

          <!-- Label and input for material_desc -->
          <div class="form-group">
            <label for="material_desc" class="col-sm-2 control-label">
              Material desc
            </label>
            <div class="col-sm-10">
              <input type="text" id="material_desc" name="material_desc" placeholder="Material desc" class="form-control" value="<%= @material.material_desc %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Material
              </button>
              or
              <a href="/materials">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
