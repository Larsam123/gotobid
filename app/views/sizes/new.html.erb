<!-- Validation failure messages -->

<% if @size.errors.any? %>
  <% @size.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Size</h3>
      </div>
      <div class="panel-body">
        <form action="/create_size" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for size_id -->
          <div class="form-group">
            <label for="size_id" class="col-sm-2 control-label">
              Size
            </label>
            <div class="col-sm-10">
              <input type="text" id="size_id" name="size_id" placeholder="Size" class="form-control" value="<%= @size.size_id %>">
            </div>
          </div>

          <!-- Label and input for size_desc -->
          <div class="form-group">
            <label for="size_desc" class="col-sm-2 control-label">
              Size desc
            </label>
            <div class="col-sm-10">
              <input type="text" id="size_desc" name="size_desc" placeholder="Size desc" class="form-control" value="<%= @size.size_desc %>">
            </div>
          </div>

          <!-- Label and input for count -->
          <div class="form-group">
            <label for="count" class="col-sm-2 control-label">
              Count
            </label>
            <div class="col-sm-10">
              <input type="text" id="count" name="count" placeholder="Count" class="form-control" value="<%= @size.count %>">
            </div>
          </div>

          <!-- Label and input for order -->
          <div class="form-group">
            <label for="order" class="col-sm-2 control-label">
              Order
            </label>
            <div class="col-sm-10">
              <input type="text" id="order" name="order" placeholder="Order" class="form-control" value="<%= @size.order %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Size
              </button>
              or
              <a href="/sizes">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
