<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Size #<%= @size.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Size</dt>
              <dd><%= @size.size_id %></dd>

              <dt>Size desc</dt>
              <dd><%= @size.size_desc %></dd>

              <dt>Count</dt>
              <dd><%= @size.count %></dd>

              <dt>Order</dt>
              <dd><%= @size.order %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/sizes" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/sizes/<%= @size.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_size/<%= @size.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
