<!-- Validation failure messages -->

<% if @proposal.errors.any? %>
  <% @proposal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Request contract proposals</h3>
      </div>
      <div class="panel-body">
        <form action="/create_proposal" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



          <!-- Label and input for start_date -->
          <div class="form-group">
            <label for="start_date" class="col-sm-4 control-label">
              Requested start date
            </label>
            <div class="col-sm-8">
              <input type="text" id="start_date" name="start_date" placeholder="Requested service start date" class="form-control" value="<%= @proposal.start_date %>">
            </div>
          </div>

          <!-- Label and input for end_date -->
          <div class="form-group">
            <label for="end_date" class="col-sm-4 control-label">
              Requested end date
            </label>
            <div class="col-sm-8">
              <input type="text" id="end_date" name="end_date" placeholder="Requested service end date" class="form-control" value="<%= @proposal.end_date %>">
            </div>
          </div>



          <!-- Label and input for user_request_val -->
          <div class="form-group">
            <label for="user_request_val" class="col-sm-4 control-label">
              What is your ideal weekly bill?
            </label>
            <div class="col-sm-8">
              <input type="text" id="user_request_val" name="user_request_val" placeholder="Ideal weekly invoice amount" class="form-control" value="<%= @proposal.user_request_val %>">
            </div>
          </div>




          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create proposal
              </button>
              or
              <a href="/">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
