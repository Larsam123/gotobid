<!-- Validation failure messages -->

<% if @proposal.errors.any? %>
  <% @proposal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Proposal #<%= @proposal.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_proposal/<%= @proposal.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


          <!-- Label and input for start_date -->
          <div class="form-group">
            <label for="start_date" class="col-sm-2 control-label">
              Start date
            </label>
            <div class="col-sm-10">
              <input type="text" id="start_date" name="start_date" placeholder="Start date" class="form-control" value="<%= @proposal.start_date %>">
            </div>
          </div>

          <!-- Label and input for end_date -->
          <div class="form-group">
            <label for="end_date" class="col-sm-2 control-label">
              End date
            </label>
            <div class="col-sm-10">
              <input type="text" id="end_date" name="end_date" placeholder="End date" class="form-control" value="<%= @proposal.end_date %>">
            </div>
          </div>

         <!-- Label and input for user_request_val -->
          <div class="form-group">
            <label for="user_request_val" class="col-sm-2 control-label">
              User request val
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_request_val" name="user_request_val" placeholder="User request val" class="form-control" value="<%= @proposal.user_request_val %>">
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Proposal
              </button>
              or
              <a href="/proposals/<%= @proposal.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
